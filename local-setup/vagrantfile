Vagrant.configure("2") do |config|
  config.hostmanager.enabled = true
  config.hostmanager.manage_host = true

#### NGINX VM ###
  config.vm.define "webby" do |web|
    web.vm.box = "ubuntu/bionic64"
    web.vm.hostname = "web01"
    web.vm.network "private_network",ip: "192.168.56.11"
  end

### tomcat vm ###
  config.vm.define "app" do |app|
    app.vm.box = "geerlingguy/centos7"
    app.vm.hostname = "app"
    app.vm.network "private_network", ip: "192.168.56.12"
    app.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
    end
  end 


  ### Rabbitmq vm ###
  config.vm.define "rmq" do |rmq|
    rmq.vm.box = "geerlingguy/centos7"
    rmq.vm.hostname = "rmq"
    rmq.vm.network "private_network", ip: "192.168.56.16"
  end

  ### memcache vm ###
  config.vm.define "mch" do |mch|
    mch.vm.box = "geerlingguy/centos7"
    mch.vm.hostname = "mch"
    mch.vm.network "private_network", ip: "192.168.56.14"
  end

  ### Database vm ###
  config.vm.define "db" do |db|
    db.vm.box = "geerlingguy/centos7"
    db.vm.hostname = "db"
    db.vm.network "private_network", ip: "192.168.56.15"
  end 

end